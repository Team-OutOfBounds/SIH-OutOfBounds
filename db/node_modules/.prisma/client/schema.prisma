generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model global_index {
  uuid     String   @id @default(cuid())
  filename String
  summary  summary?
  ner      ner?
}

model summary {
  id                Int          @id @default(autoincrement())
  summary           String
  global_index_uuid String       @unique
  global_index      global_index @relation(fields: [global_index_uuid], references: [uuid])
}

model ner {
  uuid              String       @id @default(cuid())
  file_name         String
  CASE_NUMBER       String
  COURT             String
  DATE              String?
  GPE               String
  JUDGE             String
  LAWYER            String
  ORG               String
  OTHER_PERSON      String
  PETITIONER        String
  PRECEDENT         String
  PROVISION         String
  RESPONDENT        String
  STATUTE           String
  WITNESS           String
  global_index_uuid String       @unique
  global_index      global_index @relation(fields: [global_index_uuid], references: [uuid])
}
